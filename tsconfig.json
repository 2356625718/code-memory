{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"],
      "assets/*": ["assets"],
      "static/*": ["static"],
      "request/*": ["src/request/*"],
      "utils/*": ["src/utils/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "typeRoots": ["./node_modules/@types/", "./src/renderer/typings"]
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
